{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Train model - Local debugging - with wandb",
            "type": "debugpy",
            "request": "launch",
            "program": "grokking/scripts/train_grokk.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "args": [
                "dataset.dataset_seed=42",
                "dataset.frac_train=0.4",
                "wandb.wandb_project=grokking_replica_debugging",
            ],
        },
        {
            "name": "Train model - Local debugging - without wandb",
            "type": "debugpy",
            "request": "launch",
            "program": "grokking/scripts/train_grokk.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "args": [
                "dataset.dataset_seed=42",
                "dataset.frac_train=0.4",
                "wandb.use_wandb=false",
                "wandb.wandb_project=grokking_replica_debugging", // <-- not relevant for running without wandb
            ],
            "env": {
                "WANDB_DISABLED": "true"
            }
        },
        {
            "name": "Train model - Local debugging multirun joblib launcher - without wandb",
            "type": "debugpy",
            "request": "launch",
            "program": "grokking/scripts/train_grokk.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "args": [
                "--multirun",
                "hydra/launcher=basic",
                // "hydra/launcher=joblib",
                "dataset.frac_train=0.4",
                "wandb.use_wandb=false",
                "wandb.wandb_project=grokking_replica_debugging", // <-- not relevant for running without wandb
            ],
            "env": {
                "WANDB_DISABLED": "true"
            }
        },
        {
            "name": "Train model - HHU Hilbert HPC submission - Single Setup",
            "type": "debugpy",
            "request": "launch",
            "program": "grokking/scripts/train_grokk.py",
            "console": "integratedTerminal",
            "args": [
                //    >> START: Hydra options
                "--multirun",
                "hydra/sweeper=basic",
                // "hydra/launcher=basic", // <-- Use this for local submission
                "hydra/launcher=hpc_submission", // <-- Use this for HHU Hilbert HPC submission
                "hydra.launcher.queue=CUDA",
                // "hydra.launcher.template=RTX6000",
                "hydra.launcher.template=GTX1080",
                "hydra.launcher.memory=32",
                "hydra.launcher.ncpus=4",
                "hydra.launcher.ngpus=1",
                "hydra.launcher.walltime=05:00:00", // <-- The pipeline run for regular embeddings should only take a few minutes.
                //    >> END: Hydra options
                //
                "dataset.dataset_seed=42",
                "dataset.frac_train=0.4",
                "wandb.use_wandb=true",
                "wandb.wandb_project=grokking_replica_HHU_Hilbert_HPC_runs",
            ],
            "env": {
                "PYTORCH_ENABLE_MPS_FALLBACK": "1"
            }
        },
        {
            "name": "Train model - HHU Hilbert HPC submission - Multiple dataset seeds",
            "type": "debugpy",
            "request": "launch",
            "program": "grokking/scripts/train_grokk.py",
            "console": "integratedTerminal",
            "args": [
                //    >> START: Hydra options
                "--multirun",
                "hydra/sweeper=basic",
                // "hydra/launcher=basic", // <-- Use this for local submission
                "hydra/launcher=hpc_submission", // <-- Use this for HHU Hilbert HPC submission
                "hydra.launcher.queue=CUDA",
                // "hydra.launcher.template=RTX6000",
                "hydra.launcher.template=GTX1080",
                "hydra.launcher.memory=32",
                "hydra.launcher.ncpus=4",
                "hydra.launcher.ngpus=1",
                "hydra.launcher.walltime=05:00:00", // <-- The pipeline run for regular embeddings should only take a few minutes.
                //    >> END: Hydra options
                //
                // "dataset.dataset_seed=42,43",
                "dataset.dataset_seed=44,45",
                "dataset.frac_train=0.4",
                //
                "wandb.use_wandb=true",
                "wandb.wandb_project=grokking_replica_HHU_Hilbert_HPC_runs",
            ],
            "env": {
                "PYTORCH_ENABLE_MPS_FALLBACK": "1"
            }
        },
    ]
}